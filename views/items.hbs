<div class="row">
    <div class="col-md-12">
        <h2>Items<a href="/items/add" class="btn btn-success pull-right">Add Item</a></h2>
        <hr />

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Published</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each posts}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{#formatDate postDate}}{{/formatDate}}</td>
                        <td>
                            <a href="/items?category={{this.category}}">{{this.category}}</a>
                        </td>
                        <td>{{this.price}}</td>
                        <td>{{this.published}}</td>
                        <td><a href="/items/delete/{{id}}" class="btn btn-danger">remove</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
    {{#unless posts}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>