<div class="row">
    <section class="main col-md-9">
        <item>
            <div class="row">
                <div class="col-4">
                    {{#if data.item}}
                    <h2>{{data.item.title}}</h2>
                    <img src="{{data.item.featureImage}}" alt="feature Image" style="width:100%" />

                </div>

                <div class="col-8"><br />
                    <br />
                    <div class="row">
                        <div class="col-12">
                            {{data.item.body}}
                            <br /><br />
                            <strong>Price:</strong>
                            $ {{data.item.price}}<br />
                            <strong>Category:</strong>
                            {{data.item.category}}<br />
                            <strong>Last Updated:</strong>
                            {{data.item.postDate}}
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
        </item>
    </section>

    <aside class="col-md-3">
        <br /><br />
        <h4>Items</h4>
        {{#if data.items}}
            <ul class="list-group">
                {{#each data.items}}
                    <a href="/item/{{this.id}}?category=" class="list-group-item">{{this.title}}</a>
                {{/each}}
            </ul>
        {{/if}}

        <h4>Categories</h4>

        {{#if data.categories}}
            <ul class="list-group">
                {{#each data.categories}}
                    <a href="/item/{{this.id}}?category=" class="list-group-item">{{this.category}}</a>
                {{/each}}
            </ul>
        {{/if}}
    </aside>
</div>